<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd http://www.springframework.org/schema/util
http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="annotationBasedWebScriptHandler" class="nl.runnable.alfresco.webscripts.AnnotationBasedWebScriptHandler" />

	<bean id="webScriptBuilder" class="nl.runnable.alfresco.webscripts.AnnotationBasedWebScriptBuilder">
		<property name="annotationBasedWebScriptHandler" ref="annotationBasedWebScriptHandler" />
	</bean>

	<bean id="webScriptRegistry" class="nl.runnable.alfresco.webscripts.AnnotationBasedWebScriptRegistry"
		init-method="initializeAnnotationBasedWebScripts">
		<property name="annotationBasedWebScriptBuilder" ref="webScriptBuilder" />
	</bean>

	<bean class="nl.runnable.alfresco.webscripts.ExampleWebScript" />

</beans>