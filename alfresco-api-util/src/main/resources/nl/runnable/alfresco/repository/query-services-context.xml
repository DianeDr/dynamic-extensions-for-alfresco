<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<description>Defines Query services.</description>

	<bean id="queryBuilderFactory" class="nl.runnable.alfresco.repository.query.impl.QueryBuilderFactoryImpl" />

	<bean id="luceneQueryHelper" class="nl.runnable.alfresco.repository.query.impl.QueryHelperImpl">
		<qualifier value="lucene" />
		<property name="querySerializer" ref="luceneQuerySerializer" />
		<property name="searchService" ref="searchService" />
	</bean>

	<bean id="luceneQuerySerializer" class="nl.runnable.alfresco.repository.query.impl.LuceneQuerySerializer">
		<qualifier value="lucene" />
		<property name="namespacePrefixResolver" ref="namespaceService" />
		<property name="nodeService" ref="nodeService" />
		<property name="pathHelper" ref="pathHelper" />
	</bean>

</beans>