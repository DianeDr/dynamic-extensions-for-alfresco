<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<description>Defines Node services.</description>

	<bean id="pathHelper" class="nl.runnable.alfresco.repository.node.impl.PathHelperImpl">
		<property name="namespacePrefixResolver" ref="namespaceService" />
	</bean>

	<bean id="nodeHelper" class="nl.runnable.alfresco.repository.node.impl.NodeHelperImpl">
		<property name="nodeService" ref="nodeService" />
		<property name="searchService" ref="searchService" />
		<property name="namespaceService" ref="namespaceService" />
		<property name="dictionaryService" ref="dictionaryService" />
		<property name="pathHelper" ref="pathHelper" />
	</bean>

	<bean id="fileFolderHelper" class="nl.runnable.alfresco.repository.node.impl.FileFolderHelperImpl">
		<property name="hiddenAspect" ref="hiddenAspect" />
	</bean>

</beans>