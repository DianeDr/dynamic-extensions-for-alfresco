<?xml version="1.0" encoding="utf-8"?>
<alfresco-config>

	<config evaluator="string-compare" condition="Space Wizards">
		<folder-types>
			<type name="obm:bundleFolder" />
		</folder-types>
	</config>

	<config evaluator="node-type" condition="obm:bundleFolder">
		<property-sheet>
			<separator name="bundleSeparator" display-label="OSGi Bundles" component-generator="LabelSeparatorGenerator" />
			<show-property name="obm:autoStartBundles" display-label="Start Bundles automatically"/>
			<show-property name="obm:bundleType" display-label="Bundle type"/>
		</property-sheet>
	</config>
	
	<config evaluator="node-type" condition="obm:managedBundle">
		<property-sheet>
			<separator name="bundleSeparator" display-label="OSGi Bundle" component-generator="LabelSeparatorGenerator" show-in-edit-mode="false" />
			<show-property name="cm:title" display-label="Name" show-in-edit-mode="false" />
			<show-property name="cm:description" display-label="Description" show-in-edit-mode="false" />
			<show-property name="cm:author" display-label="Vendor" show-in-edit-mode="false" />
			<show-property name="obm:symbolicName" display-label="Symbolic Name" show-in-edit-mode="false" />
			<show-property name="obm:version" display-label="Version" show-in-edit-mode="false" />
			<show-property name="obm:bundleId" display-label="Bundle ID" show-in-edit-mode="false" />
			<show-property name="obm:state" display-label="State" show-in-edit-mode="false" />
		</property-sheet>
	</config>

	<!-- Conflicting bundles are no longer supported -->
	<!-- <config evaluator="node-type" condition="obm:conflictingBundle">
		<property-sheet>
			<separator name="bundleSeparator" display-label="OSGI Bundle" component-generator="LabelSeparatorGenerator" show-in-edit-mode="false" />
			<show-property name="obm:symbolicName" display-label="Symbolic Name" show-in-edit-mode="false" />
			<show-property name="obm:version" display-label="Version" show-in-edit-mode="false" />
			<show-property name="obm:conflictingBundles" display-label="Conflicting Bundles" show-in-edit-mode="false" />
		</property-sheet>
	</config> -->

</alfresco-config>

