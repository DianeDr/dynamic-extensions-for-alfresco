<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<description>
		Defines Java-based WebScript handlers for the REST interface.
	</description>

	<bean id="webscript.dynamic-extensions.bundles.info.get" class="nl.runnable.alfresco.osgi.container.webscripts.BundleInfoWebScript" />

	<bean id="webscript.dynamic-extensions.bundles.command.post" class="nl.runnable.alfresco.osgi.container.webscripts.JsonBundleCommandWebScript">
		<property name="commandsByName">
			<map>
				<entry key="start">
					<bean class="nl.runnable.alfresco.osgi.container.webscripts.StartBundleCommand" />
				</entry>
				<entry key="stop">
					<bean class="nl.runnable.alfresco.osgi.container.webscripts.StopBundleCommand" />
				</entry>
			</map>
		</property>
	</bean>

</beans>